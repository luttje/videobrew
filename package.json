{
  "name": "@videobrew/monorepo",
  "description": "Monorepo for Videobrew containing all packages and tools to publish them",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "lerna": "^6.5.1",
    "license-checker-rseidelsohn": "^4.1.1"
  },
  "scripts": {
    "build": "node ./scripts/licenses.mjs && npx lerna run build",
    "ci:test": "npm run ci:test-scripts && npx lerna run ci:test",
    "publish": "npx lerna publish --no-private",
    "test-scripts": "jest",
    "ci:test-scripts": "npm run test-scripts -- --ci --coverage"
  }
}
