{
	"name": "@videobrew/cli",
	"description": "Create videos using any web technologies. Animate a web page with your favorite web framework and have Videobrew render it to a video.",
	"keywords": [
		"video",
		"generation",
		"animation",
		"api"
	],
	"homepage": "https://github.com/luttje/videobrew",
	"repository": {
		"type": "git",
		"url": "https://github.com/luttje/videobrew"
	},
	"author": "Luttje",
	"license": "AGPL-3.0-or-later",
	"version": "0.1.1",
	"bin": {
		"videobrew": "bin/cli.js"
	},
	"scripts": {
		"dev": "npx tsc --watch",
		"prebuild": "del-cli bin",
		"build": "npx tsc",
		"postbuild": "cp package*.json bin && cd bin && npm ci --omit=dev"
	},
	"dependencies": {
		"ascii-table3": "^0.8.2",
		"chalk": "^4.1.2",
		"ffmpeg-static": "^5.1.0",
		"local-web-server": "^4.2.1",
		"node-cleanup": "^2.1.2",
