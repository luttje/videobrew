		"ts-command-line-args": "^2.4.2"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.2",
		"@types/node": "^18.14.1",
		"del-cli": "^5.0.0",
		"typescript": "^4.9.5"
	},
	"bundledDependencies": true,
	"files": [
		"bin",
		"!bin/node_modules",
		"LICENSES-THIRD-PARTY"
