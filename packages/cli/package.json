{
  "name": "@videobrew/cli",
  "description": "Create videos using any web technologies. Animate a web page with your favorite web framework and have Videobrew render it to a video.",
  "keywords": [
    "video",
    "generation",
    "animation",
    "api"
  ],
  "homepage": "https://github.com/luttje/videobrew",
  "repository": {
    "type": "git",
    "url": "https://github.com/luttje/videobrew"
  },
  "author": "Luttje",
  "license": "AGPL-3.0-or-later",
  "version": "0.4.3-alpha.0",
  "type": "module",
  "types": "./dist/types/cli.d.ts",
  "bin": {
    "videobrew": "./dist/esm/cli.js"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "dev": "npx tsc --watch",
    "watch": "npx tsc --watch",
    "build": "npx tsc",
    "test": "npx jest",
    "ci:test": "npx jest --ci --coverage",
    "clear-build": "node ../../scripts/clear-build.mjs",
    "docs-build": "node ../../scripts/docs-build.mjs",
    "package": "node ../../scripts/package.mjs",
    "prebuild": "npm run clear-build",
    "postbuild": "npm run docs-build && npm run package",
    "prepack": "npm run package"
  },
  "dependencies": {
    "@videobrew/client": "^0.4.3-alpha.0",
    "ascii-table3": "^0.8.2",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "ffmpeg-static": "^5.1.0",
    "local-web-server": "^4.2.1",
    "node-cleanup": "^2.1.2",
    "playwright": "^1.31.1",
    "prompts": "^2.4.2",
    "ts-command-line-args": "^2.4.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.14.1",
    "@types/node-cleanup": "^2.1.2",
    "@types/prompts": "^2.4.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "gitHead": "3cf19701797286424ed22af372cdcc20f3ee75e2"
}
