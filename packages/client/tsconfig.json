{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*"
  ]
}