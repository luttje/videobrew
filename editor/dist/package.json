{
	"name": "@videobrew/editor",
	"description": "Create videos using any web technologies. Animate a web page with your favorite web framework and have Videobrew render it to a video.",
	"author": "Luttje",
	"license": "AGPL-3.0-or-later",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"postbuild": "cp package*.json dist && cd dist && npm ci --omit=dev"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.2.0",
		"@sveltejs/kit": "^1.5.0",
		"@tsconfig/recommended": "^1.0.2",
		"autoprefixer": "^10.4.13",
		"cross-env": "^7.0.3",
		"postcss": "^8.4.21",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.2.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	}
}
